# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/cinescout

# Redis (optional for MVP)
REDIS_URL=redis://localhost:6379

# TMDb API - Get your key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_api_key_here

# TfL API (optional) - Get your app key from https://api-portal.tfl.gov.uk/
# API works without key (50 req/min), with key increases to 500 req/min
TFL_APP_KEY=your_tfl_app_key_here

# Scraping settings
SCRAPE_TIMEOUT=30
SCRAPE_MAX_RETRIES=3

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Admin settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_SECRET_KEY=change-this-secret
